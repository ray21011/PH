<div class="contain text-light">
  <div class="col-6">
    <h2>新規会員登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :"名前　（姓）", class: "col-6" %>
        <%= f.text_field :last_name, autocomplete: "last_name" %>
        <%= f.label :"　　　（名）", class: "col-6" %>
        <%= f.text_field :first_name, autocomplete: "first_name" %>
      </div>
      <div class="field">
        <%= f.label :"フリガナ　（セイ）", class: "col-6" %>
        <%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>
        <%= f.label :"　　　　　（メイ）", class: "col-6" %>
        <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
      </div>
      <div class="field">
        <%= f.label :"メールアドレス" , class: "col-6"%>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="field">
        <%= f.label :"郵便番号（ハイフンなし）", class: "col-6" %>
        <%= f.telephone_field :postal_code, autocomplete: "postal_code" %>
      </div>
      <div class="field">
        <%= f.label :"住所", class: "col-6" %>
        <%= f.text_field :address, autocomplete: "address" %>
      </div>
      <div class="field">
        <%= f.label :"電話番号（ハイフンなし）", class: "col-6" %>
        <%= f.telephone_field :telephone_number, autocomplete: "telephone_number" %>
      </div>
      <div class="field">
        <%= f.label :"パスワード", class: "col-6" %>
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :パスワード（確認用） , class: "col-6"%>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>
    <h3>既に登録済みの方</h3>
    <h3><u><%= link_to "こちら", new_customer_session_path, class: "text-light" %></u> からログインしてください。</h3>
  <!--</div>-->
</div>